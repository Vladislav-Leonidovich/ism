@model lpnu.Models.StructurePost

@{
	ViewData["Title"] = "Edit Structure Post";
}
<div class="form-container">
	<h2>Edit Structure Post</h2>
	<form asp-action="EditItemForStructurePost" method="post">
		<input type="hidden" asp-for="Id" />
		<div>
			<label asp-for="ProfessorName">Professor Name</label>
			<input type="text" asp-for="ProfessorName" class="form-control" />
			<span asp-validation-for="ProfessorName" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Position">Position</label>
			<input type="text" asp-for="Position" class="form-control" />
			<span asp-validation-for="Position" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Description">Description</label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="form-group">
			<div class="btn-group">
				<a asp-action="Structure" class="btn btn-secondary">Cancel</a>
				<button type="submit" class="btn btn-success">Update</button>
			</div>
		</div>
	</form>
</div>