@model lpnu.Models.University

@{
	ViewData["Title"] = "Edit University";
}
<div class="form-container">
	<h2>Edit University</h2>
	<form asp-action="EditItemForUniversity" method="post">
		<input type="hidden" asp-for="Id" />
		<div>
			<label asp-for="Name">Company Name</label>
			<input type="text" asp-for="Name" placeholder="Enter..." class="form-control" required />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="LogoPath">Logo Path</label>
			<input type="text" asp-for="LogoPath" placeholder="Enter..." class="form-control" required />
			<span asp-validation-for="LogoPath" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="City">City</label>
			<input type="text" asp-for="City" placeholder="Enter..." class="form-control" required />
			<span asp-validation-for="City" class="text-danger"></span>
		</div>
		<div>
			<label asp-for="Country">Country</label>
			<input type="text" asp-for="Country" placeholder="Enter..." class="form-control" required />
			<span asp-validation-for="Country" class="text-danger"></span>
		</div>
		<div class="btn-group">
			<a asp-action="InternationalRelations" class="btn btn-secondary">Cancel</a>
			<button type="submit" class="btn btn-success">Update</button>
		</div>
	</form>
</div>